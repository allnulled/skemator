{
  "name": "skemator",
  "version": "1.0.2",
  "description": "To build diagrams via scripting",
  "main": "src/main.js",
  "browser": "src/skemator.browser.js",
  "bin": {
    "skemator": "bin/skemator"
  },
  "scripts": {
    "compile": "pegjs --format commonjs -o src/skemator.parser.js src/skemator.parser.pegjs",
    "compile:browser": "pegjs --format commonjs -o src/skemator.browser.parser.js src/skemator.parser.pegjs && node dev/export.browser.js",
    "build": "npm run compile && npm run compile:browser",
    "test": "mocha test/**/*.test.js",
    "test:cli": "npm run test:cli:clean && node bin/skemator compile \"test/1/*.skm\" \"test/2/*.skm\" \"test/3/*.skm\" --svg --png --pdf",
    "test:cli:clean": "rimraf test/*/*.mmd test/*/*.pdf test/*/*.png test/*/*.svg"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^3.0.2",
    "execute-command-sync": "^1.0.2",
    "glob": "^7.1.4",
    "globby": "^10.0.1",
    "mermaid": "^8.2.6",
    "mermaid.cli": "^0.5.1",
    "pegjs": "^0.10.0",
    "yargs": "^14.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "copyfiles": "^2.1.1",
    "http-server": "^0.11.1",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allnulled/skemator.git"
  },
  "bugs": {
    "url": "https://github.com/allnulled/skemator/issues"
  },
  "homepage": "https://github.com/allnulled/skemator#readme"
}
